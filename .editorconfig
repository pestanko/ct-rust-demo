
# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# Markdown Files
[*.{md,mdx}]
trim_trailing_whitespace = false

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Bash Files
[*.sh]
end_of_line = lf